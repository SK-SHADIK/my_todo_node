doctype html
html
  head
    title Create Task
    link(rel="stylesheet" href="/styles/custom.css")
  body
    div.form-container
      h1 Create New Task
      form(action="/tasks/create" method="POST")
        div.form-group
          label(for="category_id") Task Category:
          select(name="category_id" id="category_id")
            option(value="" disabled selected) Select a category
            each category in categories
              option(value=category.category_id)= category.category_name

        div.form-group
          label(for="task_name") Task Name:
          input(type="text" name="task_name" id="task_name" placeholder="Enter task name")

        div.form-group
          label(for="due_date") Task Due Date:
          input(type="datetime-local" name="due_date" id="due_date" placeholder="Select date and time")

        div.form-group
          label(for="task-description") Task Description:
          textarea#description(name="description")

        div.form-group
          label(for="status_id") Task Status:
          select(name="status_id" id="status_id")
            option(value="" disabled selected) Select a status
            each status in statuses
              option(value=status.status_id)= status.status_name

        div.form-group
          label(for="priority_id") Task Priority:
          select(name="priority_id" id="priority_id")
            option(value="" disabled selected) Select a priority
            each priority in priorities
              option(value=priority.priority_id)= priority.priority_name

        div.form-group
          label Task Active:
          div.toggle-switch
            input#is_active(type="checkbox" name="is_active" checked)
            label(for="is_active") 

        div.form-group
          button(type="submit") Create Task
