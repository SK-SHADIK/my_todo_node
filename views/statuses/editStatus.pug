doctype html
html
    head
        title Edit Status
        link(rel="stylesheet" href="/styles/custom.css")
    body
        div.container
            a(href="/statuses") Back to statuses

            h1 Edit Status
            form(action="/statuses/edit" method="POST")
                div.form-group
                input(type="hidden" name="status_id", value=status.status_id)
                div.form-group
                label(for="status_name") status Name:
                input(type="text" name="status_name", value=status.status_name, required)
                div.form-group
                button(type="submit") Update Status

