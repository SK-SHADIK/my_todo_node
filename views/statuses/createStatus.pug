doctype html
html
  head
    title Status
    link(rel="stylesheet" href="/styles/custom.css")
  body
    div.form-container
      h1 Create New Status
      form(action="/statuses/create" method="POST")
        div.form-group
          label(for="status-name") status Name:
          input(type="text" name="status_name" id="status_name" placeholder="Enter status name")

        div.form-group
          button(type="submit") Create Status
