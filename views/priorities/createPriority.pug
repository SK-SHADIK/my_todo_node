doctype html
html
  head
    title Priority
    link(rel="stylesheet" href="/styles/custom.css")
  body
    div.form-container
      h1 Create New Priority
      form(action="/priorities/create" method="POST")
        div.form-group
          label(for="priority-name") priority Name:
          input(type="text" name="priority_name" id="priority_name" placeholder="Enter priority name")

        div.form-group
          button(type="submit") Create Priority
