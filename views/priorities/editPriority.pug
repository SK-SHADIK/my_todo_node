doctype html
html
    head
        title Edit Priority
        link(rel="stylesheet" href="/styles/custom.css")
    body
        div.container
            a(href="/priorities") Back to priorities

            h1 Edit Priority
            form(action="/priorities/edit" method="POST")
                div.form-group
                input(type="hidden" name="priority_id", value=priority.priority_id)
                div.form-group
                label(for="priority_name") Priority Name:
                input(type="text" name="priority_name", value=priority.priority_name, required)
                div.form-group
                button(type="submit") Update Priority

